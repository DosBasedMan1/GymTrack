<% include layout.ejs %>
<p>Welcome, <%= user.email %> | <a href="/logout">Logout</a></p>
<p><a href="/exercise/add">Add Exercise</a> | <a href="/log">Log Workout</a></p>

<h2 class="mt-4">Recent Logs</h2>
<table class="table">
  <thead><tr><th>Date</th><th>Exercise</th><th>Weight</th><th>Reps</th><th>Sets</th><th>Notes</th></tr></thead>
  <tbody>
  <% logs.forEach(l => { %>
    <tr>
      <td><%= new Date(l.performed_at).toLocaleDateString() %></td>
      <td><%= l.name %></td>
      <td><%= l.weight %></td>
      <td><%= l.reps %></td>
      <td><%= l.sets %></td>
      <td><%= l.notes %></td>
    </tr>
  <% }) %>
  </tbody>
</table>
